
<nav class="navbar navbar-expand-sm navbar-dark fixed-top">
  <div class="container">
    <% if user_signed_in? %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Logout", destroy_user_session_path, method: "delete", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "See posts", posts_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to current_user.first_name, user_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Users", users_index_path, class: "nav-link" %>
        </li>
      </ul>
    <% else %>
      <div class="d-flex justify-content-between container">
        <div>
          <h2 class="text-white">Facebook</h2>
        </div>
        <div>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html:{ class: "form-inline" }, :defaults => { :input_html => { :class => "sign-in-input-fields" }}) do |f| %>
            <%= f.input :email, required: false, placeholder: "Enter your email", input_html: {id: "sign-in-email"} %>
            <%= f.input :password, placeholder: "Enter your password", input_html: {id: "sign-in-password"} %>
            <%= f.button :submit, "Log in", id: 'submit-button' %>              
            <% end %>             
        </div>
      </div>
      
      <% end %>    
  </div>   
</nav>
